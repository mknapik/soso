
<%
  field_of_study_id = field_of_study_id.nil? ? 'null' : field_of_study_id
  specialization_id = specialization_id.nil? ? 'null' : specialization_id
%>

<script type="text/javascript">
    $(document).ready(function () {
        $("input.date_picker").datepicker({
            format: 'dd-mm-yyyy',
            startDate: '01-01-1950',
            endDate: '01-01-2013',
            startView: 'decade',
            autoclose: true,
        });

        $('#user_faculty_id').select2({
            dropdownAutoWidth: true,
        });
        $('#user_field_of_study_id').select2({
            dropdownAutoWidth: true,
        });
        $('#user_specialization_id').select2({
            dropdownAutoWidth: true,
            allowClear: true,
        });
        $('#user_study_year').select2({
            dropdownAutoWidth: true,
        });

        $('#user_sector_ids').select2({
            minimumSelectionSize: 1,
            maximumSelectionSize: 3,
        });

        $("#user_field_of_study_id").remoteChained("#user_faculty_id", "/profile/get_field_of_studies", <%= field_of_study_id %>);
        $("#user_specialization_id").remoteChained("#user_field_of_study_id", "/profile/get_specializations", <%= specialization_id %>);


    })
</script>